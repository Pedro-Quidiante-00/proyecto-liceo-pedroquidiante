---
import { Icon } from 'astro-icon/components';

import noticiasBlog from '../../data/noticias.json';
const {noticiasPrincipales} = noticiasBlog;
interface Props {
    titulo: string;
    subtitulo: string;
}
const { titulo, subtitulo } = Astro.props;
---
<section class="py-16 px-auto">
    <div class="max-w-10xl mx-auto">
        <div class="text-center mb-12">
            <h2 class="titulos-gen">{titulo}</h2>
            <p class="desc">{subtitulo}</p>
        </div>

        <div class="relative max-w-7xl mx-auto">
            <div class="overflow-hidden rounded-2xl shadow-2xl">
                <div class="flex transition-transform duration-500 ease-in-out" id="carousel">
                    {noticiasPrincipales.map((articulo) => (
                            <a href={articulo.enlace} class="block w-full flex-shrink-0 relative group h-96">
                                <img
                                        src={articulo.imagen}
                                        alt={articulo.alt_imagen}
                                        class="absolute inset-0 w-full h-full object-cover z-0 transition-transform duration-300 group-hover:scale-105"
                                        loading="lazy"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent z-10"></div>

                                <div class="relative z-20 h-full flex flex-col justify-end p-8">
                                    <div>
                                    <span class="inline-block bg-red-600 text-white px-3 py-1 rounded-full text-sm font-semibold mb-3">
                                        {articulo.categoria}
                                    </span>
                                        <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-yellow-300 transition-colors">
                                            {articulo.titulo}
                                        </h3>
                                        <p class="text-gray-200 leading-relaxed">
                                            {articulo.subtitulo} </p>
                                        <div class="mt-4">
                                            <span class="text-yellow-300 font-semibold hover:underline">Leer más →</span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                    ))}
                </div>
            </div>

            <button id="carousel-prev" class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white/90 hover:bg-white text-red-600 rounded-full p-3 shadow-lg transition-all duration-200 hover:scale-110 z-30">
                <Icon name="mdi:arrow-left" class="w-6 h-6"/>
            </button>
            <button id="carousel-next" class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white/90 hover:bg-white text-red-600 rounded-full p-3 shadow-lg transition-all duration-200 hover:scale-110 z-30">
                <Icon name="mdi:arrow-right" class="w-6 h-6"/>
            </button>
        </div>
    </div>
</section>
